# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
API_PREFIX=/api/v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/database_name?schema=public
# For production with connection pooling (optional)
# DATABASE_URL_POOLED=postgresql://user:password@host:port/database?pgbouncer=true&connection_limit=1

# Redis Configuration (for email queue)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Email Configuration
MAIL_HOST=localhost
MAIL_PORT=2500
MAIL_FROM=noreply@example.com
MAIL_SECURE=false
# For production SMTP authentication:
# MAIL_USER=your_smtp_username
# MAIL_PASS=your_smtp_password

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=60000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_ISSUER=cotizate
JWT_AUDIENCE=cotizate-api